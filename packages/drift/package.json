{
  "name": "@standards-kit/drift",
  "version": "0.1.6",
  "description": "Detect when code or infrastructure drifts from your standards",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "drift": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "github",
    "drift",
    "compliance",
    "repository",
    "standards",
    "cli"
  ],
  "author": "Chris Little",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrismlittle123/standards-kit.git",
    "directory": "packages/drift"
  },
  "bugs": {
    "url": "https://github.com/chrismlittle123/standards-kit/issues"
  },
  "homepage": "https://github.com/chrismlittle123/standards-kit/tree/main/packages/drift#readme",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@standards-kit/conform": "workspace:*",
    "commander": "^14.0.0",
    "minimatch": "^10.1.1",
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.4.0",
    "vitest": "^2.1.8"
  }
}
